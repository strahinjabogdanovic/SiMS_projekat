<Window x:Class="ProjekatSIMS.PacijentPocetnaStranica"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS"
        mc:Ignorable="d"
        Title="PacijentPocetnaStranica" Height="500" Width="700">
    <Grid>
        <DataGrid x:Name="dataGridPacijenti" ItemsSource="{Binding Path = TerminiP, UpdateSourceTrigger=PropertyChanged}"
                  SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Left" 
                  Height="250" Margin="10,47,0,0" VerticalAlignment="Top" Width="500">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum" Binding="{Binding Path = datum}"/>
                <DataGridTextColumn Header="Vreme" Binding="{Binding Path = vreme}" />
                <DataGridTextColumn Header="Lekar" Binding="{Binding Path = lekar}" />
                <DataGridTextColumn Header="Soba" Binding="{Binding Path = soba}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button" Content="Kreiraj termin" HorizontalAlignment="Left" Margin="30,380,0,0" VerticalAlignment="Top" Width="130" Height="42" FontSize="18" Click="KreirajTermin_Click"/>
        <Button x:Name="button1" Content="Obrisi termin" HorizontalAlignment="Left" Margin="190,380,0,0" VerticalAlignment="Top" Width="138" Height="42" FontSize="18" Click="ObrisiTermin_Click"/>
        <Button x:Name="button2" Content="Pomeranje termina" HorizontalAlignment="Left" Margin="362,380,0,0" VerticalAlignment="Top" Width="124" Height="42" FontSize="16" Click="Izmeni_Click"/>
        <Button x:Name="button3" Content="Podesavanje podsetnika" HorizontalAlignment="Left" Margin="548,379,0,0" VerticalAlignment="Top" Width="91" Height="43" RenderTransformOrigin="0.085,0.217" Click="Terapija_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="598,246,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
