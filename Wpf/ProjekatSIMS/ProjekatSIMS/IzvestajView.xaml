<Window x:Class="ProjekatSIMS.IzvestajView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatSIMS"
        mc:Ignorable="d"
        Title="IzvestajView" Height="350" Width="500" Background="LightBlue" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <DatePicker HorizontalAlignment="Left" Margin="173,104,0,0" VerticalAlignment="Top" SelectedDate="{Binding Path=PocetniDatum}" FontSize="20"/>
        <DatePicker HorizontalAlignment="Left" Margin="173,163,0,0" VerticalAlignment="Top" SelectedDate="{Binding Path=KrajnjiDatum}" FontSize="20"/>
        <Button Content="Generisi izvestaj" HorizontalAlignment="Left" Margin="147,249,0,0" VerticalAlignment="Top" Width="201" Height="36" Command="{Binding prikaziIzvestaj}" FontSize="20"/>
        <Label Content="Izaberite period za koji zelite izvestaj" HorizontalAlignment="Left" Margin="85,43,0,0" VerticalAlignment="Top" FontSize="20" Grid.ColumnSpan="2" Width="334"/>

    </Grid>
</Window>